<%= form_with model: @post, local: true, data: { turbo: false } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :title, class: "text-2xl font-bold text-blue-500" %>
  <%= f.text_field :title, class: "border-2 border-gray-300 rounded" %>
  <%= f.label :content, class: "text-xl" %>
  <%= f.text_area :content, class: "tinymce" %>

  <%= f.submit "Post", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
<% end %>