<% provide(:page_title, "Những bài viết của #{@user.full_name}") %>

<div class="min-h-screen flex justify-between lg:px-10 px-5 flex-col md:flex-row">
  <div class="md:w-1/3 flex flex-col items-center">
    <img src='<%= avatar_url(@user) %>' alt="avatar" class="rounded-full">
    <ul>
      <li class="font-bold text-xl text-gray-900 mt-6"><%= @user.full_name %></li>
      <li class="text-sm text-gray-500"><%= @user.email %></li>
    </ul>
    <%= render "shared/follow_stats" %>
    <% if current_user %>
      <%= render "follow_form" %>
    <% end %>
  </div>


  <div class="flex flex-col md:w-2/3">
    <% if @posts.any? %>
      <div class="grid md:grid-cols-3 grid-cols-2 gap-3 grid-flow-row">
        <%= render @posts %>
      </div>
      <%== pagy_nav(@pagy) %>
    <% else %>
      <p>Không có bài viết nào</p>
    <% end %>
  </div>
</div>