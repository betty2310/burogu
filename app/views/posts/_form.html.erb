<%= form_with model: @post, local: true, data: { turbo: false } do |f| %>
<div class="flex flex-col gap-10">
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.text_field :title, placeholder: "Title...", class: "text-gray-900 border-none focus:border-none text-3xl block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 mb-2" %>
  <%= f.text_area :content, class: "tinymce" %>
  <%= f.submit "Post", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mx-96" %>
</div>
<% end %>
